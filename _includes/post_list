  <h2>{{ year.name }}</h2>
  <ul class="no-bullet archive">
    {% for post in year.items %}
      <li>
        <a href="{{ post.url }}">{{ post.title }}</a> <em>{{ post.date | date: "%b %d" }}</em>
      </li>
    {% endfor %}
  </ul>
{% endfor %}
